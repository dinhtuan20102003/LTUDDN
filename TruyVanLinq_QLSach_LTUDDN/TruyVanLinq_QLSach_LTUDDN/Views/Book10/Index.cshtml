@Html.PagedListPager(Model, page => Url.Action("Index", 
    new {page, sortOrder = ViewBag.PriceSort, 
        currentsearchString = ViewBag.currentsearchString, 
        currentCateggoryID = ViewBag.currentCateggoryID } ))
